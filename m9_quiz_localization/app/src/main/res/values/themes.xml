<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Green_Purple" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#1AAA39</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">#362B42</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/purple_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#762285</item>
        <!--  RadioGroup -->
        <item name="colorControlNormal">#1AAA39</item>
        <item name="colorAccent">#059A14</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="customText">
        <item name="android:fontFamily">@font/opensans_medium</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#228E3A</item>
    </style>
    <!-- Стиль кнопок -->
    <style name="MyButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">#1AAA39</item>
        <item name="android:textColor">#1AAA39</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:elevation">20dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">@font/opensans_bold</item>

    </style>


</resources>