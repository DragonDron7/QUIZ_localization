<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Green_quiz" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="customText">
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">#D8B0DF</item>
    </style>

    <style name="MyButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">#E3DAE4</item>
        <item name="android:textColor">#D8B0DF</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:elevation">20dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">@font/opensans_bold</item>

    </style>

</resources>